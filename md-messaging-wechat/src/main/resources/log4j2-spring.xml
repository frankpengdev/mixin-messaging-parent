<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn" name="md-messaging-wechat">
    <Properties>
       <Property name="LOG_ROOT_DIR">fkb-logs</Property>
    </Properties>

    <Appenders>
        <Console name="STDOUT">
            <PatternLayout>
                <Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %highlight{%-5level}{FATAL=Blinking bright red, ERROR=Bright red, WARN=Red, INFO=Blue, DEBUG=Normal, TRACE=Normal} %cyan{%logger} - %msg%n%throwable</Pattern>
            </PatternLayout>
        </Console>

        <RollingFile name="RollingFile" fileName="${LOG_ROOT_DIR}/messaging-wechat.log"
                     filePattern="${LOG_ROOT_DIR}/$${date:yyyy-MM}/messaging-wechat-%d{MM-dd-yyyy}-%i.log">
            <immediateFlush>true</immediateFlush>
            <PatternLayout>
                <Pattern>%d %p %c{2} [%t] %m%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="250 MB"/>
            </Policies>
            <DefaultRolloverStrategy max="20"/>
        </RollingFile>

    </Appenders>

    <Loggers>
        <Root level="DEBUG">
            <AppenderRef level="DEBUG" ref="STDOUT"/>
            <AppenderRef level="INFO" ref="RollingFile"/>
        </Root>
    </Loggers>

</Configuration>