<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{100} -%L %msg%n</Pattern>
        </layout>
        <encoder>
            <Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %highlight(%-5level) %cyan(%logger{100}) %L %msg%n</Pattern>
            <!-- 设置字符集 -->
            <charset>UTF-8</charset>

                <pattern>[%thread] %highlight(%-5level) %cyan(%logger{100}) - %msg %n</pattern>

         </encoder>
    </appender>

    <root level="debug">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>